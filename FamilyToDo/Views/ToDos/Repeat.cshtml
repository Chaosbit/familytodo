@model FamilyToDo.Models.RepeatingTodo

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Make Repeatable</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="RepeatingTodoes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="MasterTodoID" />
                <div class="form-group">
                    <label asp-for="Start" class="control-label"></label>
                    <input asp-for="Start" class="form-control" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modus" class="control-label"></label>
                    <select asp-for="Modus" asp-items="Html.GetEnumSelectList<RepeatingMode>()" class="form-control"></select>
                    <span asp-validation-for="Modus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RepeatingValue" class="control-label"></label>
                    <input asp-for="RepeatingValue" class="form-control" />
                    <span asp-validation-for="RepeatingValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @*
    <div>
        <a asp-action="Details" asp-controller="ToDoLists" asp-route-id="@Model.ToDoListID">Back to @Model.ToDoList.Name</a>
    </div>
    *@

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
