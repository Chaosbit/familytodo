@model FamilyToDo.Models.ToDoModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>@Html.DisplayFor(model => model.Title)<a asp-action="Edit" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-pencil" style="float:right" aria-hidden="true"></a></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Details" asp-controller="ToDoLists" asp-route-id="@Model.ToDoListID">Back to @Model.ToDoList.Name</a>
</div>
</body>
</html>
