@model FamilyToDo.Models.ToDoList

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>@Html.DisplayNameFor(model => model.Name)</h4>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
    </div>

    @if (Model.ToDos != null)
    {
    <div>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ToDos.First().Title)</th>
                    <th>@Html.DisplayNameFor(model => model.ToDos.First().Status)</th>
                    <th><a asp-controller="ToDos" asp-action="Create" asp-route-id="@Model.ID" class="btn btn-primary">New</a></th>
                </tr>
            </thead>
            @foreach (var todo in Model.ToDos)
            {
                @if(todo.Status == ToDoStatus.Closed)
                {
                    continue;
                }
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.Status</td>
                    <td>
                        <a asp-action="Edit" asp-controller="ToDos" asp-route-id="@todo.ID">Edit</a> |
                        <a asp-action="Details" asp-controller="ToDos" asp-route-id="@todo.ID">Details</a> |
                        <a asp-action="Delete" asp-controller="ToDos" asp-route-id="@todo.ID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    }
    </body>
</html>
